<%- include('partials/header.ejs') %>
<body>

    <div class="container">
        <div class="card" id="formulario-pergunta">
            <div class="card-header">
                <h3>Adicionar um filme</h3>
            </div>

            <div class="card-body">

                <form method="post" action="storemovie"> 
                    <label>Título</label>
                    <input type="text" name="titulo" placeholder="Título" class="form-control">

                    <br>
                    <label>Descrição</label>
                    <textarea name="descricao" placeholder="Descrição do filme" class="form-control"></textarea>

                    <br>
                    <label>Ano</label>
                    <input type="number" name="ano" placeholder="Ano" class="form-control">
                    
                    <br>
                    <label>IMDB</label>
                    <input type="text" name="imdb" placeholder="link Imdb" class="form-control">

                    <br>
                    <button class="btn btn-danger">Save</button>
                </form>

            </div>

        </div>

    </div>

    
</body>
